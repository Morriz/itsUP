networks:
  proxynet:
    external: true

services:
  docker:
    image: wollomatic/socket-proxy:1 # see https://github.com/wollomatic/simple-traefik for reference
    container_name: proxy_docker
    network_mode: host
    command:
      - '-loglevel=info'
      - '-allowfrom=127.0.0.1'
      - '-listenip=0.0.0.0'
      - '-allowGET=/v1\..{1,2}/(version|containers/.*|events.*)'
      - '-shutdowngracetime=5'
      - '-watchdoginterval=600'
      - '-stoponwatchdog'
      - '-allowhealthcheck'
    read_only: true
    mem_limit: 64M
    cap_drop:
      - ALL
    security_opt:
      - no-new-privileges
    user: '0:1'
    restart: always
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    healthcheck:
      test: ["CMD", "./healthcheck"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 1s

  traefik:
    image: traefik:{{ versions.traefik }}
    network_mode: host
    restart: always
    dns:
      - {{ dns_honeypot }}
    volumes:
      - ./traefik/traefik.yml:/etc/traefik/traefik.yml:ro
      - ./traefik/dynamic:/etc/traefik/dynamic:ro
      - ../data/acme:/etc/acme
      - ../logs:/var/log/traefik
    depends_on:
      docker:
        condition: service_started
{%- if traefik.crowdsec.enabled %}
  {%- set cs = plugin_registry.crowdsec %}
      crowdsec:
        condition: service_healthy
{%- endif %}
    environment:
      - DOCKER_HOST=tcp://127.0.0.1:2375
      - CROWDSEC_APIKEY=${CROWDSEC_APIKEY:?}
      - CROWDSEC_CAPI_MACHINE_ID=${CROWDSEC_CAPI_MACHINE_ID:?}
      - CROWDSEC_CAPI_PASSWORD=${CROWDSEC_CAPI_PASSWORD:?}
      - LETSENCRYPT_EMAIL=${LETSENCRYPT_EMAIL:?}
    healthcheck:
      test: ["CMD-SHELL", "test ! -f /tmp/drain && traefik healthcheck"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 5s
{%- if plugin_registry.crowdsec.enabled %}
  {%- set cs = plugin_registry.crowdsec %}

  crowdsec:
    container_name: proxy_crowdsec
    image: crowdsecurity/crowdsec:{{ versions.crowdsec }}
    restart: unless-stopped
    networks:
      - default
      - proxynet
    dns:
      - {{ dns_honeypot }}
    ports:
      - '127.0.0.1:7422:7422'
      - '127.0.0.1:18080:8080'
    environment:
      GID: ${GID-1000}
      COLLECTIONS: {{ cs.collections | join(' ') }}
      CUSTOM_HOSTNAME: crowdsec
      {%- if cs.apikey %}
      BOUNCER_KEY_TRAEFIK: {{ cs.apikey }}
      {%- endif %}
    volumes:
      - ../crowdsec/acquis.yml:/etc/crowdsec/acquis.yaml:ro
      - ../data/crowdsec:/var/lib/crowdsec/data/
      - ../logs:/var/log/traefik
    labels:
      - "traefik.enable=false"
    healthcheck:
      test: ["CMD", "cscli", "version"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 30s
{%- endif %}
