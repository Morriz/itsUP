{
  "created": "2025-10-18T00:00:00+00:00",
  "updated": "2025-10-18T00:00:00+00:00",
  "name": "0-whitelist-arpa-53",
  "description": "Allow reverse DNS lookups (ARPA queries) for whitelisted IPs. This rule has precedence over the 0-deny-arpa-53 rule to allow legitimate services to perform reverse DNS while still blocking malware.",
  "action": "allow",
  "duration": "always",
  "operator": {
    "operand": "list",
    "data": "",
    "type": "list",
    "list": [
      {
        "operand": "dest.host",
        "data": "^(\\d{1,3}\\.){4}in-addr\\.arpa$",
        "type": "regexp",
        "list": null,
        "sensitive": false
      },
      {
        "operand": "lists.ips",
        "data": "${ITSUP_ROOT}/data/whitelist",
        "type": "lists",
        "list": null,
        "sensitive": false
      }
    ],
    "sensitive": false
  },
  "enabled": true,
  "precedence": true,
  "nolog": false
}
